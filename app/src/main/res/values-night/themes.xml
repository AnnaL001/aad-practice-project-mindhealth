<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MindHealth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary_dark</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary_light</item>
        <item name="colorSecondaryVariant">@color/color_secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LogoTextTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/color_secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">.02</item>
    </style>

    <style name="RoleScreenTextTitle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/color_secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">.03</item>
    </style>

    <style name="HomeScreenTitle" parent="SubTitle">
        <item name="android:textColor">@color/color_secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">.02</item>
    </style>

    <style name="ScreenTextSubTitle" parent="SubTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardTextTitle" parent="SubTitle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardTextTitleVariant" parent="CardTextTitle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="strokeColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="ButtonText" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/color_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InputTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/color_secondary</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

</resources>