<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="36dp"
    tools:layout_editor_absoluteY="-161dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginStart="@dimen/screen_margin"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="@dimen/screen_margin"
            android:importantForAccessibility="no"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toStartOf="@id/guideline8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/online_counselling"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/app_name_role_screen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_margin"
            android:layout_marginTop="@dimen/screen_margin"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/app_name"
            android:textAlignment="viewStart"
            android:textAppearance="@style/RoleScreenTextTitle"
            app:layout_constraintEnd_toStartOf="@id/guideline8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/txv_subtitle_role_screen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_margin"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/role_screen_text_subtitle"
            android:textAlignment="viewStart"
            android:textAppearance="@style/ScreenTextSubTitle"
            app:layout_constraintEnd_toStartOf="@id/guideline8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_name_role_screen" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_patient_selection"
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_margin"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="@dimen/screen_margin"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingVertical="20dp"
            android:text="@string/btn_patient_selection_text"
            android:textAppearance="@style/ButtonText"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline8"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_therapist_selection"
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_margin"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/screen_margin"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingVertical="20dp"
            android:text="@string/btn_therapist_selection_text"
            android:textAppearance="@style/ButtonText"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline8"
            app:layout_constraintTop_toBottomOf="@+id/btn_patient_selection" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="410dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>